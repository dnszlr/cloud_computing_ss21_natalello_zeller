extends layout

block content

    div.wrapper()
        div.first()
            div.sideBar
                div.personalInfo()
                    div.deco()
                    div.helperDiv()
                        a#aUsername.infoText()
                    div.picWrapper
                        input#inputProfilePicture.inputFile(type="file", accept="image/*")
                        button#btnProfilePicture.btnProfilePicture()
                div.serverInfo()
                    div.deco()
                    div.helperDiv() Active User
                    ul#ulUser.userList
                    div.deco()
                    div.helperDiv()
                        button#btnAddGroup.btnAdd() Groupchat
                        div#modalWindow.modal()
                            div#modalContent.modal-content()
                                span#spanClose.close() &#x2715
                                input#inputGroupName.inputGroup(placeholder="Enter the group name")
                                form#userSelection()
                                button#createGroup.btnAdd() Create
                    div.deco()
        div.second()
            ul#ulRoomNav.roomNav()
            div#chatRoom.chatRoom()
            form#formChat.formChat()
                input#inputChat.inputChat(type="text", placeholder="Enter your message")
                button#btnChat.btnChat()
                input#inputFile.inputFile(type="file", accept="image/*,audio/*,video/*")
                button#btnFile.btnFile()
    script(src='/socket.io/socket.io.js')
    script(src='javascripts/chat.js')


