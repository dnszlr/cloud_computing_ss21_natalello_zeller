block content

    div.wrapper()
        div.first()
            div.sideBar
                div.personalInfo()
                    div.deco()
                    div.helperDiv()
                        a#aUsername.infoText()
                    div.helperDiv()
                        div.picHolder(style='background-image: url(/pictures/userIcon.png);')
                div.serverInfo()
                    div.deco()
