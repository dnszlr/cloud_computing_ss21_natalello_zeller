#!/usr/bin/env node

/**
 * Module dependencies.
 */
const app = require('../app');
const http = require('http');
const config = require('../config/config');

/**
 * Get port from environment and store in Express.
 */
let port = process.env.PORT || config.app.port;
app.set('port', port);

/**
 * Create HTTP server.
 */
const server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
console.log(`Application listening at http://localhost:${port}`);

/**
 * Create Socket.io
 */
const socketIo = require('socket.io');
const {initSocketIo} = require("../controllers/chatC");
const io = socketIo(server);
const redisAdapter = require('socket.io-redis');
const redisData = config.redis;
const host = 'redis-18403.c1.eu-west-1-3.ec2.cloud.redislabs.com';
const port =  18403;
const name=  'default';
const password= '28aZNQvjg66wHCzmIoxYzEcvOczwc1Lf';
io.adapter(redisAdapter(`redis://${name}:${password}@${host}:${port}`));
initSocketIo(io);

